INTERLIS 2.3;

CONTRACTED MODEL VSADSSMINI_2020_LV95_Validierung_FP (de)
AT "http://www.geo.so.ch"
VERSION "2020-11-12"  =
  
  IMPORTS VSADSSMINI_2020_LV95;
  IMPORTS UNQUALIFIED INTERLIS;
  IMPORTS UNQUALIFIED IGSFunction;
  
  VIEW TOPIC VSADSSMini_Validierung = 
  DEPENDS ON VSADSSMINI_2020_LV95.VSADSSMini;
  
	VIEW v_Knoten
    	PROJECTION OF VSADSSMINI_2020_LV95.VSADSSMini.Knoten;
    =
        ALL OF Knoten;
         
         !!@ name = PAA_Knoten;
         !!@ ilivalid.msg = "Kein PAA-Knoten";
         /* TODO: Vielleicht syntaktisch nicht ganz korrekt, da IGS_filter OBJECTS OF ANYCLASS
         * erwartet. In der IoxPlugin-Funktion kommt aber immer eine Liste an (?).
         * In den Funktionstests wurde es korrekt angewendet.
         */
         MANDATORY CONSTRAINT elementCount(IGS_filter(THIS, "FunktionHierarchisch=PA*")) > 0;

    END v_Knoten;
        
  END VSADSSMini_Validierung;

END VSADSSMINI_2020_LV95_Validierung_FP.